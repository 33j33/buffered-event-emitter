{
  "compilerOptions": {
    "outDir": "./lib",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ES2022",
    "target": "ES2022",
    "lib": ["es6", "dom", "es2022"],
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "declarationDir": "./lib/types",
    "moduleResolution": "Node" // used in order to enforce specifying .js on relative imports
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
